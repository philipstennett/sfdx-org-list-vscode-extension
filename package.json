{
  "name": "sfdx-org-list",
  "displayName": "SFDX Org List",
  "description": "Displays a list of authenticated orgs for quick logins",
  "version": "0.0.2",
  "publisher": "philstennett",
  "repository": "https://github.com/philipstennett/sfdx-org-list-vscode-extension",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:org-list"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "org-list",
          "title": "Org List",
          "icon": "media/cloud-stack.png"
        }
      ]
    },
    "views": {
      "org-list": [
        {
          "id": "org-list",
          "name": "Orgs"
        }
      ]
    },
    "commands": [
      {
        "command": "org-list.reload",
        "title": "Reload",
        "icon": {
          "light": "media/refresh.png",
          "dark": "media/refresh.png"
        }
      },
      {
        "command": "org.open",
        "title": "Open",
        "icon": {
          "light": "media/newwindow.png",
          "dark": "media/newwindow.png"
        }
      },
      {
        "command": "org.rename",
        "title": "Change Alias"
      },
      {
        "command": "org.logout",
        "title": "Logout"
      },
      {
        "command": "org.delete",
        "title": "Delete"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "org-list.reload",
          "when": "view == org-list",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "org.open",
          "when": "viewItem == non-scratch-org || viewItem == scratch-org",
          "group": "inline"
        },
        {
          "command": "org.rename",
          "when": "viewItem == non-scratch-org || viewItem == scratch-org"
        },
        {
          "command": "org.logout",
          "when": "viewItem == non-scratch-org"
        },
        {
          "command": "org.delete",
          "when": "viewItem == scratch-org"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "typescript": "^3.6.4",
    "tslint": "^5.20.0",
    "vscode-test": "^1.2.2"
  }
}
